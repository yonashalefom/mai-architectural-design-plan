// Prisma schema - all database models
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Order {
  id String @id @default(uuid())
  // Order details, tracking, status
}

model Customer {
  id String @id @default(uuid())
  // Customer info, contact details
}

model Employee {
  id String @id @default(uuid())
  // Employee data, performance metrics
}

model Item {
  id String @id @default(uuid())
  // Garments, services, pricing
}

